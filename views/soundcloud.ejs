    <meta property="og:type" content="image/jpeg" />
    <meta property="og:url" content="/soundcloud/<%=req.params.author_permalink%>/<%=req.params.permalink%>" />
    <meta property="og:image" content="<%=track.thumbnails[0].url ? track.thumbnails[0].url : `${req.domain}/storage/image/icon-soundcloud.png`%>" />
    <meta property="og:image:width" content="720" />
    <meta property="og:image:height" content="720" />
