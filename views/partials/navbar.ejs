        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-family: 'Poppins', sans-serif;
            color: white;
        }

        .close-arrow {
            margin: auto;
            color: white;
        }

        h2 {
            margin-left: 5px;
        }

        h2, .close-arrow {
            font-size: 3rem;
        }
        .desktop {
            display: none;
        }

        .mobile {
            display: flex;
            justify-content: space-between;
            align-items: center;
            overflow: hidden;
        }

        .dropdown-strip {
            margin-top: 10px;
            height: 10px;
            width: 50px;
            background-color: #D8BBBB;
        }

        .img-logo {
            width: auto;
            height: 5rem;
            margin: 0;
        }

        .dropdown-content {
            background-color: #000;
            width: 100%;
            height: 100%;
            position: fixed;
            top: 0;
            left: 0;
        }

        .btn-login, .btn-logout {
            cursor: pointer;
            width: 90px;
            height: 40px;
            border: none;
            margin: 10px 0 0 0;
            font-size: 15px;
            font-weight: 600;
        }
        
        .menu-item {
            margin: 15px 0 15px 0;
            color: white;
            font-size: 2rem;
            justify-content: space-between;
            display: flex;
            font-family: 'Poppins', sans-serif;
        }

        .items-container {
            margin: 10px;
        }

        .banner {
            text-align: center;
            position: fixed;
            bottom: 0;
            left: 20%;
        }

        .img-banner {
            width: auto;
            height: 8rem;
            border-radius: 10px;
        }

        
        .dropdown-content {
            display:list-item;
        }
    }
