<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/Profile/main.css">
    <%- include('partials/head.ejs') %>
</head>
<body>

    <%- include('partials/navbar.ejs') %>

    <div class="top-bg">
        <div class="top-container">
            <img src="<%=req.session.user.avatar%>" alt="" class="profile-picture-edit">
            <div class="info">
                <h1><%=req.session.user.username%></h1>
                <p>Subscribe Membership now! To get the best quality song download and listening experience!</p>
                <button type="button" id="playlist">
                    Your Playlist
                </button>
                <button type="button" id="edit">
                    Edit Profile
                </button>
            </div>
        </div>
    </div>

    <div class="middle-bg">
        <div class="middle-container">
            <h1>CONNECTION</h1>
            <div class="content-dc">
                <img src="<%=req.domain%>/storage/image/profile_discord.png" alt="">
                <%if(req.session.user.connection.discord){%>
                    <%if(req.session.user.id === req.session.user.connection.discord.user.id){%>

                        <button style="opacity: 85%;" type="button" id="discord-disconnect" disabled>
                            DISCONNECT DISCORD
                        </button>

                        <button type="button" id="manage-server">
                            MANAGE SERVER
                        </button>

                    <%}else{%>

                        <button type="button" id="discord-disconnect">
                            DISCONNECT DISCORD
                        </button>

                        <button type="button" id="manage-server">
                            MANAGE SERVER
                        </button>

                    <%}%>
                <%}else{%>

                    <button type="button" id="discord-connect">
                        CONNECT DISCORD
                    </button>
                    
                <%}%>
            </div>
            <div class="content-spt">
                <img src="<%=req.domain%>/storage/image/profile_spotify.png" alt="">
                <%if(req.session.user.connection.spotify){%>

                    <button type="button" id="spotify-disconnect">
                        DISCONNECT SPOTIFY
                    </button>

                <%}else{%>

                    <button type="button" id="spotify-connect">
                        CONNECT SPOTIFY
                    </button>

                <%}%>
            </div>
            <div class="content-yt">
                <img src="<%=req.domain%>/storage/image/profile_youtube.png" alt="">
                <%if(req.session.user.connection.youtube){%>

                    <button type="button" id="youtube-disconnect">
                        DISCONNECT YOUTUBE
                    </button>

                <%}else{%>

                    <button type="button" id="youtube-connect">
                        COMING SOON
                    </button>
                    
                <%}%>
            </div>
        </div>
    </div>

    <div class="bottom-bg">
        <div class="bottom-container">
            <div class="bottom-items">
                <img src="<%=req.domain%>/storage/image/profile_banner.png" alt="">
                <h1>Developed by FORENTER Company.</h1>
            </div>
        </div>
    </div>

    <script type="text/javascript" src="/profile/main.js"></script>

    <%- include('partials/footer.ejs') %>
    
</body>
</html>